<h1 class="is-size-1">Inicio</h1>

<div class="is-flex is-justify-content-flex-end mb-5">
  <%= link_to_modal new_project_path, class: "button is-info" do %>
    Nuevo Proyecto
  <% end %>
</div>

<div class="card">
  <% if @projects.any? %>
    <table class="table is-narrow is-fullwidth">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Tipo</th>
          <th>Acciónes</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <%= render "projects/project", project: project %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <%= render "projects/empty_projects" %>
  <% end %>
</div>
