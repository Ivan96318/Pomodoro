<div class="<%= browser.device.mobile? ? "bottom-sheet-modal" : "modal" %>" id="turbo-modal">
  <% if browser.device.mobile? %>
    <div class="sheet-header">
      <button class="close-btn" data-action="click->bottom-sheet-modal#hide">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <div class="sheet-content">
      <%= turbo_frame_tag "modal" %>
    </div>
  <% else %>
    <div class="modal-background" data-action="click->modal#close"></div>
    <div class="modal-card">
      <%= turbo_frame_tag "modal" %>
    </div>
    <button class="modal-close is-large" aria-label="close" data-action="modal#close"></button>
  <% end %>
</div>
