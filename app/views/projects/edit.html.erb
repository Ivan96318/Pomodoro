  <header class="modal-card-head">
    <h2 class="modal-card-title is-size-2">Editar proyecto <%= @project.name %></h2>
    <%= button_to "Eliminar", project_path(@project), 
      method: :delete,
      class: "button is-text has-text-danger",
      form: {
        data: {
          turbo: true,
          turbo_confirm: "Â¿Estas seguro?",
          action: "turbo:submit-end->modal#closeOnSubmitSuccess" }} %>
  </header>

  <div class="card p-5">
    <%= render "form", new_project: @project %>
  </div>
<% end %>
